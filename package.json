        "style-loader": "^1.3.0",
        "tslint": "^6.1.3",
        "tslint-loader": "^3.6.0",
        "typescript": "^4.0.5",
        "webpack": "^4.46.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.1"
    },
    "dependencies": {
        "handlebars": "^4.7.6",
        "jquery": "^3.5.1",
        "logrocket": "^1.0.14",
        "moment-jalaali": "^0.9.2",
