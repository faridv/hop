{
    "name": "@hbbtv/hop",
    "version": "0.3.0",
    "main": "src/index.ts",
    "scripts": {
        "start": "npm run server:dev  --trace-deprecation",
        "server": "npm run server:dev",
        "server:dev": "webpack-dev-server --mode development --config ./webpack.config.js --hot --inline --progress --watch",
        "server:prod": "cross-env NODE_ENV=production webpack-dev-server  --mode production --config ./webpack.config.js --port 3000 --host 127.0.0.1 --hot --inline --progress  --watch --open --content-base dist/",
        "build": "npm run build:prod",
        "build:dev": "webpack --mode development --config ./webpack.config.js --progress --color --display-error-details",
        "build:prod": "cross-env NODE_ENV=production webpack --mode production --config ./webpack.config.js  --progress  --color --display-error-details --bail",
        "cypress": "cypress open",
        "clean": "npm cache clear && rimraf -- dist",
        "test": "karma start",
        "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/faridv/hop"
    },
    "keywords": [
        "hbbtv",
        "hbb",
        "hop"
    ],
    "author": "Farid Roshan",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/faridv/hop/issues"
    },
    "homepage": "https://github.com/faridv/hop#readme",
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-transform-arrow-functions": "^7.12.1",
        "@babel/plugin-transform-async-to-generator": "^7.12.1",
        "@babel/plugin-transform-runtime": "^7.12.1",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-typescript": "^7.12.1",
        "@types/jasmine": "^3.6.1",
        "@types/jquery": "^3.5.4",
        "@types/node": "^14.14.20",
        "@types/slick-carousel": "^1.6.34",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.1.0",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^6.3.0",
        "core-js": "^3.8.2",
        "cross-env": "^7.0.2",
        "css-loader": "^4.3.0",
        "ejs-loader": "^0.3.7",
        "eslint": "^7.17.0",
        "hbbtv-typings": "^1.5.2",
        "html-loader": "^1.3.2",
        "html-webpack-plugin": "^4.5.1",
        "istanbul-instrumenter-loader": "^3.0.1",
        "jasmine": "^3.6.3",
        "jasmine-core": "^3.6.0",
        "karma": "^5.2.3",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage-istanbul-reporter": "^3.0.3",
        "karma-jasmine": "^4.0.1",
        "karma-sourcemap-loader": "^0.3.8",
        "karma-spec-reporter": "0.0.32",
        "karma-webpack": "^4.0.2",
        "rimraf": "^3.0.2",
