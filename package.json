{
    "name": "@hbbtv/hop",
    "version": "0.3.0",
    "main": "src/index.ts",
    "scripts": {
        "start": "npm run server:dev",
        "server": "npm run server:dev",
        "server:dev": "webpack-dev-server --mode development --config ./webpack.config.js --hot --inline --progress --watch",
        "server:prod": "cross-env NODE_ENV=production webpack-dev-server  --mode production --config ./webpack.config.js --port 3000 --host 127.0.0.1 --hot --inline --progress  --watch --open --content-base dist/",
        "build": "npm run build:prod",
        "build:dev": "webpack --mode development --config ./webpack.config.js --progress --color --display-error-details",
        "build:prod": "cross-env NODE_ENV=production webpack --mode production --config ./webpack.config.js  --progress  --color --display-error-details --bail",
        "cypress": "cypress open",
        "clean": "npm cache clear && rimraf -- dist",
        "test": "karma start",
        "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/jasmine": "^2.8.16",
        "@types/jquery": "^3.3.33",
        "@types/node": "^10.17.11",
        "@types/slick-carousel": "^1.6.34",
        "awesome-typescript-loader": "^5.2.0",
        "copy-webpack-plugin": "^5.1.1",
        "cross-env": "^5.2.1",
        "css-loader": "^1.0.1",
        "cypress": "^3.8.3",
        "ejs-loader": "^0.3.5",
        "eslint": "^5.16.0",
        "hbbtv-typings": "^1.5.2",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "istanbul-instrumenter-loader": "^3.0.0",
        "jasmine": "^3.5.0",
        "jasmine-core": "^3.5.0",
        "karma": "^4.4.1",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage-istanbul-reporter": "^2.1.1",
        "karma-jasmine": "^1.1.0",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-spec-reporter": "0.0.32",
        "karma-webpack": "^3.0.0",
        "rimraf": "^2.7.1",
        "source-map-loader": "^0.2.1",
        "style-loader": "^0.22.1",
        "tslint": "^5.20.1",
        "tslint-loader": "^3.6.0",
        "typescript": "^3.8.3",
        "webpack": "^4.41.4",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.1"
    },
    "dependencies": {
        "handlebars": "^4.7.3",
        "jquery": "^3.4.1",
        "logrocket": "^1.0.6",
        "moment-jalaali": "^0.9.1",
        "prayer-times": "^0.1.0",
        "slick-carousel": "^1.8.1"
    }
}
