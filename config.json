{
    "title": "HOP: IRIB UHD HbbTV Application",
    "container": "#app",
    "locale": "fa",
    "timezone": "Asia/Tehran",
    "delay": 500,
    "timeout": 60000,
    "transitionSpeed": 0,
    "clockUpdateInterval": 600000,
    "theme": "default",
    "mediaPlayer": "videojs",
    "hd": true,
    "resolution": "720",
    "verbose": false,
    "log": false,
    "autoStart": false,
    "streamMode": false,
    "streamUrl": "http://test.livemedia.irib.ir/mdash/ifilm-1m.stream/manifest.m3u8",
    "exitMethod": "hide",
    "api": {
        "url": "http://api.hbbtv.ir/ifilm/",
        "services": {
            "clock": "../clock.php",
            "weather": "../weather",
            "log": "../log.php",
            "schedule": "schedule",
            "program.latest": "series",
            "program.episodes": "series/{programId}",
            "news": "news",
            "news.details": "news/{newsId}",
            "market.labels": "../market/labels",
            "market.data": "../market/data",
            "quran": "../quran",
            "tehran-air": "../tehran-air/{type}",
            "sepehr": "../sepehr"
        },
        "pusher": "http://localhost:8080"
    },
    "applications": [
        {
            "button": {
                "key": "red,r",
                "image": "assets/img/redbutton_sm.png",
                "position": "bottom: 40px; right: 40px;"
            },
            "hasHub": true,
            "clock": false,
            "connectionStatus": false,
            "theme": "default",
            "layout": "iktv",
            "modules": [
                {
                    "title": "sepehr",
                    "type": "sepehr",
                    "icon": "square"
                },
                {
                    "title": "درباره شبکه",
                    "type": "about-channel",
                    "icon": "tv"
                },
                {
                    "title": "برنامه‌ها",
                    "type": "vod",
                    "icon": "tv1"
                },
                {
                    "title": "اخبار",
                    "type": "news",
                    "icon": "newspaper"
                },
                {
                    "title": "بازار",
                    "type": "market",
                    "icon": "line-graph"
                },
                {
                    "title": "کیفیت هوای تهران",
                    "type": "tehran-air",
                    "icon": "dust"
                },
                {
                    "title": "آب و هوا",
                    "type": "weather",
                    "icon": "sun"
                },
                {
                    "title": "قرآن کریم",
                    "type": "quran",
                    "icon": "book"
                },
                {
                    "title": "اوقات شرعی",
                    "type": "prayer-times",
                    "icon": "sunrise"
                },
                {
                    "title": "بازی‌ها",
                    "type": "games",
                    "icon": "gamepad"
                },
                {
                    "title": "درباره برنامه",
                    "type": "info",
                    "icon": "info_outline"
                },
                {
                    "title": "سوالات متداول",
                    "type": "faq",
                    "icon": "tag"
                }
            ]
        }
    ]
}
